<div class="bg-white border border-gray-200 rounded-xl shadow-sm hover:shadow-md transition overflow-hidden flex flex-col md:flex-row">
  <div class="w-full md:w-1/4 bg-gray-100 flex items-center justify-center p-4">
    <% if resource.main_image_url.present? %>
      <img src="<%= resource.main_image_url %>" alt=""
           class="w-full h-full object-cover rounded">
    <% else %>
      <%= render "resources/resource_icon", kind: resource.kind %>
    <% end %>
  </div>

  <div class="flex-1 p-4">
    <h3 class="text-lg font-semibold text-gray-900">
      <%= link_to resource.title, resource.featured_url || resource_path(resource),
                  class: "hover:underline" %>
    </h3>

    <p class="text-sm text-gray-600 line-clamp-3 mt-1">
      <%= resource.description %>
    </p>

    <div class="flex justify-end mt-4 space-x-2">
      <% if resource.download_attachment&.file&.attached? %>
        <%= link_to raw("<span class='fa fa-download'></span>"),
                    resource_download_path(resource),
                    class: "btn btn-utility" %>
      <% end %>
    </div>
  </div>
</div>
